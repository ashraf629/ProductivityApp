<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dataentry">

    <fragment
        android:id="@+id/navigation_dataentry"
        android:name="com.example.productivityapp.ui.dataentry.DataEntryFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_dataentry" />

    <fragment
        android:id="@+id/navigation_timeline"
        android:name="com.example.productivityapp.ui.timeline.TimelineFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_timeline" />

    <fragment
        android:id="@+id/navigation_analytics"
        android:name="com.example.productivityapp.ui.analytics.AnalyticsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_analytics" />
</navigation>